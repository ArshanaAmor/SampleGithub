<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"


    android:layout_height="match_parent"
    android:background="@color/home_background"
    tools:context=".newActivity.AboutUsActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/custom_toolbar" />

    <androidx.cardview.widget.CardView
        android:id="@+id/lnr_rajmudra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:padding="10dp">

                <ImageView
                    android:layout_width="30sp"
                    android:layout_height="40sp"
                    android:layout_gravity="bottom"
                    android:padding="5dp"
                    android:src="@drawable/company"
                    android:tint="#0080A3" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:clickable="false"
                        android:editable="false"
                        android:hint="Company"
                        android:text="Arshana"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnr_website"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/img_website"
                    android:layout_width="30sp"
                    android:layout_height="40sp"
                    android:layout_gravity="bottom"
                    android:padding="5dp"
                    android:src="@drawable/website"
                    android:tint="#0080A3" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edt_website"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:clickable="true"
                        android:editable="false"
                        android:hint="Website"
                        android:text="https://arshana.tk"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnr_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/img_gmail"
                    android:layout_width="30sp"
                    android:layout_height="40sp"
                    android:layout_gravity="bottom"
                    android:padding="5dp"
                    android:src="@drawable/whatsapp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edt_gmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:clickable="true"
                        android:editable="false"
                        android:hint="Email"
                        android:text="arshanadevelopers@gmail.com"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnr_whatsapp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/img_whatsapp"
                    android:layout_width="30sp"
                    android:layout_height="40sp"
                    android:layout_gravity="bottom"
                    android:padding="5dp"
                    android:src="@drawable/whatsapp_icon"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edt_whatsapp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:clickable="true"
                        android:editable="false"
                        android:hint="Contact"
                        android:text="9326896183"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>


            <LinearLayout
                android:visibility="gone"
                android:layout_marginBottom="20sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_gravity="bottom"
                    android:padding="10dp"
                    android:src="@drawable/whatsapp_icon" />

                <ImageView
                    android:layout_marginLeft="10sp"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_gravity="bottom"
                    android:padding="10dp"
                    android:src="@drawable/whatsapp" />
            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>